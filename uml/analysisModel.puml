@startuml

class Board
class Game
class Player
class Square
enum Color
enum File
enum Piece

class Square {
    getFile() : char
    getRank() : int
    getCoordinate() : String
}

class Board {
    movePiece(placement : Square, destination : Square) : void
    getPiece(square : Square) : Piece
    getTurn() : Color
}

class Player {
    getName() : String
    getColor() : Color
}

enum Piece {
    getColor() : Color
}

class Game {
    getPlayers() : Player[]
    getBoard() : Board
}

enum File {
    getIndex() : int
}

@enduml